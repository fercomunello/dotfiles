# ZSH most typed commands
alias his="sed 's/^[^;]\+;//g' ~/.zsh_history | sort | uniq -c | sort -nr | head -n 10"

# Clear terminal history
alias chis="history -c"

# Open files
alias -s {pdf,PDF}='background bgevince'
